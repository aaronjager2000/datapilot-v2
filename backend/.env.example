# Application Settings
APP_NAME=Datapilot
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/datapilot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Security & Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Storage (S3/R2)
STORAGE_TYPE=local  # local, s3, r2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=datapilot-uploads
S3_ENDPOINT_URL=  # Leave empty for AWS S3, or set for R2: https://account-id.r2.cloudflarestorage.com

# Local Storage Settings
LOCAL_UPLOAD_DIR=./storage/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@datapilot.com
EMAILS_FROM_NAME=Datapilot

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false  # Set to true for synchronous testing

# LLM API Keys (Choose one or both)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
DEFAULT_LLM_PROVIDER=anthropic  # anthropic or openai

# Stripe (Billing)
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PRO=price_pro_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_monthly

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=  # Optional: Your Sentry DSN for error tracking

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Superuser (Initial Setup)
FIRST_SUPERUSER_EMAIL=admin@datapilot.com
FIRST_SUPERUSER_PASSWORD=changethis
FIRST_SUPERUSER_NAME=Admin User

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_AI_INSIGHTS=true
ENABLE_OAUTH=false

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# WebSocket Configuration
WS_MESSAGE_QUEUE_SIZE=100
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
